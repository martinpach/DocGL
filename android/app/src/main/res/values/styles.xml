<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color5</item>
        <item name="colorControlActivated">@color/color2</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">@drawable/error_message_text_color</item>
        <item name="android:background">@drawable/error_message_background</item>
    </style>
    <style name="SuccessMessage">
        <item name="android:textColor">@drawable/success_message_text_color</item>
        <item name="android:background">@drawable/success_message_background</item>
    </style>
    <style name="home_text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="profile_text">
        <item name="android:textSize">@dimen/text_profile_size</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="profile_sub_text">
        <item name="android:textSize">@dimen/sub_text_profile_size</item>
        <item name="android:textColor">@color/color3</item>
    </style>
    <style name="home_error_text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_clickable_text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@drawable/text_button</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">makeAppointment</item>
    </style>
    <style name="btn_transparent">
        <item name="android:textColor">@drawable/btn_transparent_text_color</item>
    </style>
    <dimen name="text_size">30sp</dimen>
    <dimen name="text_profile_size">20sp</dimen>
    <dimen name="sub_text_profile_size">15sp</dimen>
</resources>
